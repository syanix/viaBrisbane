---
// src/pages/404.astro

import Layout from '../layouts/Layout.astro';

const title = "Page Not Found - Via Brisbane";
const description = "Sorry, the page you are looking for does not exist.";
const keywords = "404, page not found, Brisbane events, error";
---

<Layout title={title} description={description} keywords={keywords}>
    <main>
        <section class="highlight-section not-found">
            <div class="content-box">
                <h1>404 - Page Not Found</h1>
                <p>Sorry, the page you are looking for does not exist.</p>
                <p>You can return to the <a href="/">homepage</a> or check out our <a href="/events">events</a>.</p>
            </div>
        </section>
    </main>
</Layout>