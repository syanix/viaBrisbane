---
// src/pages/404.astro

import Layout from '../layouts/Layout.astro';

const title = "Page Not Found - Via Brisbane";
const description = "Sorry, the page you are looking for does not exist.";
const keywords = "404, page not found, Brisbane events, error";
---

<Layout title={title} description={description} keywords={keywords}>
  <!-- Hero Section -->
  <section class="relative">
    <div class="h-[50vh] min-h-[400px] bg-slate-800 overflow-hidden">
      <img 
        src="/images/banner-404.jpg" 
        alt="Page Not Found" 
        class="w-full h-full object-cover opacity-60"
      />
      <div class="absolute inset-0 bg-black opacity-40"></div>
      <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent"></div>
      <div class="absolute inset-0 flex flex-col justify-center items-center text-center px-4">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-4 drop-shadow-lg">
          404 - Page Not Found
        </h1>
        <p class="text-xl text-white max-w-3xl drop-shadow-md">
          Sorry, we couldn't find the page you were looking for.
        </p>
      </div>
    </div>
  </section>

  <!-- Content Section -->
  <section class="py-16 bg-white">
    <div class="mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        <div class="mb-8">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 mx-auto text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        
        <p class="text-lg text-gray-700 mb-6">
          The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.
        </p>
        
        <div class="flex flex-col md:flex-row gap-4 justify-center">
          <a href="/" class="inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded transition-colors shadow-md">
            Return to Homepage
          </a>
          <a href="/events" class="inline-block bg-slate-100 hover:bg-slate-200 text-slate-800 font-bold py-3 px-6 rounded transition-colors shadow-md">
            Browse Events
          </a>
        </div>
      </div>
      
      <div class="max-w-4xl mx-auto mt-16 bg-blue-50 p-6 rounded-lg">
        <h2 class="text-2xl font-bold mb-4 text-center">Explore Popular Pages</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-8">
          <a href="/events" class="block p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow text-center">
            <span class="block font-bold text-lg mb-2">Events</span>
            <span class="text-gray-600">Find what's happening in Brisbane</span>
          </a>
          
          <a href="/food-trucks" class="block p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow text-center">
            <span class="block font-bold text-lg mb-2">Food Trucks</span>
            <span class="text-gray-600">Discover Brisbane's food trucks</span>
          </a>
          
          <!-- <a href="/maps" class="block p-4 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow text-center">
            <span class="block font-bold text-lg mb-2">Maps & Guides</span>
            <span class="text-gray-600">Navigate around Brisbane</span>
          </a> -->
        </div>
      </div>
    </div>
  </section>
</Layout>