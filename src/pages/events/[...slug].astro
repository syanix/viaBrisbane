---
import Layout from '../../layouts/Layout.astro';
import { getEventBySlug } from '../../utils/eventsCache';
import { createSlug } from '../../utils/slug';

// The slug will contain the full path after /events/
const { slug = '' } = Astro.params;

const BASE_URL = import.meta.env.PUBLIC_BASE_URL || 'https://www.viabrisbane.com';

// Split the path into segments
const segments = slug.split('/');

// First segment should be the event ID
const eventId = segments[0];

const { event, dates } = await getEventBySlug(Astro.locals.runtime.env.DB, eventId);

if (!event) {
    console.log('Event not found for ID:', eventId);
    return Astro.redirect('/404');
}

const title = `${event.subject} ${event.location} - Via Brisbane`;
const description = event.description?.slice(0, 160) || 'Event details';
const keywords = `Brisbane events, ${event.subject}, ${event.location || ''}, ${event.primaryeventtype || ''}`.toLowerCase();
const image = event.eventimage ? `${event.eventimage}` : `${BASE_URL}/images/viaBrisbane.png`;

const eventSlug = createSlug(event.subject, event.location, event.event_id);
---
<Layout 
    title={title} 
    description={description} 
    keywords={keywords}
    image={image}
    url={`/events/${eventSlug}`}
>
    <main>
        <div class="banner-container">
            <img 
                src={event.eventimage || '/images/default-image.jpg'} 
                alt={event.subject} 
                class="banner-image"
            />
        </div>

        <section class="highlight-section event-detail">
            <div class="content-box">
                <!-- Full-width title -->
                <h1 class="section-heading full-width">{event.subject}</h1>

                <div class="event-content-grid">
                    <!-- Left side: Event meta and booking info -->
                    <div class="event-info">
                        <div class="event-meta">
                            {dates.length > 0 && (
                                <div class="event-dates">
                                    <p><strong>Event Dates:</strong></p>
                                    <ul>
                                        {dates.map(date => (
                                            <li>{date.formatteddatetime}</li>
                                        ))}
                                    </ul>
                                </div>
                            )}
                            {event.venue && (
                                <p><strong>Venue:</strong> {event.venue}</p>
                            )}
                            {event.venueaddress && (
                                <p><strong>Address:</strong> {event.venueaddress}</p>
                            )}
                            {event.cost && (
                                <p><strong>Cost:</strong> {event.cost}</p>
                            )}
                            {event.age && (
                                <p><strong>Age:</strong> {event.age}</p>
                            )}
                            {event.agerange && (
                                <p><strong>Age Range:</strong> {event.agerange}</p>
                            )}
                            {event.maximumparticipantcapacity && (
                                <p><strong>Capacity:</strong> {event.maximumparticipantcapacity}</p>
                            )}
                            {event.eventtype && (
                                <p><strong>Event Type:</strong> {event.eventtype}</p>
                            )}
                            {event.primaryeventtype && (
                                <p><strong>Category:</strong> {event.primaryeventtype}</p>
                            )}
                            {event.status && (
                                <p><strong>Status:</strong> {event.status}</p>
                            )}
                        </div>

                        {event.bookings && (
                            <div class="booking-info">
                                <h2>Booking Information</h2>
                                <p set:html={event.bookings} />
                            </div>
                        )}

                        <div class="social-share">
                            <h3>Share This Event</h3>
                            <div class="share-buttons">
                                <a href={`https://www.facebook.com/dialog/share?app_id=530286526102392&display=popup&href=${encodeURIComponent(`${BASE_URL}/events/${eventSlug}`)}&redirect_uri=https%3A%2F%2Fwww.viabrisbane.com`}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="share-button">
                                    F
                                </a>
                                <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(`Check out ${event.subject} at ${event.venue || 'Brisbane'}`)}
                                    &url=${encodeURIComponent(`${BASE_URL}/events/${eventSlug}`)}&image=${encodeURIComponent(event.eventimage || '/images/default-image.jpg')}`}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="share-button">
                                    X
                                </a>
                                <a href={`https://pinterest.com/pin/create/button/?url=${encodeURIComponent(`${BASE_URL}/events/${eventSlug}`)}&media=${encodeURIComponent(event.eventimage || '/images/default-image.jpg')}&description=${encodeURIComponent(event.subject)}`}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="share-button">
                                    P
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Right side: Map and Share buttons -->
                    <div class="event-right-column">
                        <div class="event-map-container">
                            {event.venueaddress && (
                                <iframe
                                    width="100%"
                                    height="100%"
                                    style="border:0"
                                    loading="lazy"
                                    allowfullscreen
                                    referrerpolicy="no-referrer-when-downgrade"
                                    src={`https://www.google.com/maps/embed/v1/place?key=${import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY}&q=${encodeURIComponent(event.venueaddress)}`}
                                ></iframe>
                            )}
                        </div>
                       
                    </div>
                </div>

                <!-- Full-width description at bottom -->
                <div class="event-description full-width">
                    <h2>Description</h2>
                    <p set:html={event.description} />

                    {event.requirements && (
                        <div class="requirements">
                            <h2>Requirements</h2>
                            <p set:html={event.requirements} />
                        </div>
                    )}

                    {event.meetingpoint && (
                        <div class="meeting-point">
                            <h2>Meeting Point</h2>
                            <p>{event.meetingpoint}</p>
                        </div>
                    )}
                </div>

                <div class="event-actions full-width">
                    <a href="/events" class="button primary">
                        Back to Events
                    </a>
                </div>
            </div>
        </section>
    </main>
</Layout>