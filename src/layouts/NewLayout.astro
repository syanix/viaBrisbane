---
import "../assets/css/global.css";
import Head from '../components/head.astro'
const { 
    title, 
    description, 
    keywords, 
    image, 
    url, 
    pagination,
    page,
    searchQuery,
    totalPages,
    schema
} = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<Head 
    title={title} 
    description={description} 
    keywords={keywords} 
    image={image} 
    url={url} 
    pagination={pagination}
    page={page}
    searchQuery={searchQuery}
    totalPages={totalPages}
    schema={schema}
/>
<body class="font-sans text-black antialiased">
	<a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:px-4 focus:py-2 focus:bg-blue-600 focus:text-white focus:rounded">Skip to content</a>
	
	<!-- Header -->
	<header class="bg-black text-white sticky top-0 z-50">
		<div class="container mx-auto px-4 py-4 flex justify-between items-center">
			<!-- Logo -->
			<a href="/" class="text-2xl font-bold tracking-tight text-white">
				<span class="inline-block">VIA</span>
				<span class="inline-block text-blue-400">BRISBANE</span>
			</a>
			
			<!-- Desktop Navigation -->
			<nav class="hidden md:flex space-x-8">
				<div class="group relative">
					<a href="#" class="text-white hover:text-blue-400 font-medium uppercase tracking-wide transition duration-150 ease-in-out py-1 flex items-center">
						Now in Brisbane
