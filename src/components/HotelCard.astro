---
interface Hotel {
  id: string;
  name: string;
  description: string;
  category?: {
    id: string;
    name: string;
  };
  area?: string; // For simple display cards
  price?: {
    amount: number;
    currency: string;
    formatted: string;
  } | string; // Allow either object or string for flexibility
  image?: string; // For simple display cards
  images?: {
    url: string;
    caption?: string;
    category: string;
  }[];
  starRating?: number;
  dealBadge?: string;
  guestRating?: {
    value: number;
    count: number;
  };
}

interface Props {
  hotel: Hotel;
  viewDetailsUrl?: string; // URL to view hotel details - defaults to Expedia if not provided
}

const { hotel, viewDetailsUrl } = Astro.props as Props;

// Get display values with fallbacks
const imageUrl = hotel.image || (hotel.images && hotel.images.length > 0 ? hotel.images[0].url : 'https://images.unsplash.com/photo-1566073771259-6a8506099945?q=80&w=2070&auto=format&fit=crop');
const categoryName = hotel.category?.name || 'Hotel';
const areaName = hotel.area || '';
const priceDisplay = typeof hotel.price === 'string' ? hotel.price : hotel.price?.formatted || '';
const hotelUrl = viewDetailsUrl || `https://www.expedia.com/Brisbane-Hotels.d179993.Travel-Guide-Hotels?`; // Default to Expedia
---

<div class="bg-white flex flex-col h-full shadow-[0px_2px_8px_rgba(0,0,0,0.1)]">
  <div class="relative">
    <!-- Image container -->
    <div class="relative pb-[66%] overflow-hidden">
      <img 
        src={imageUrl} 
        alt={hotel.name} 
        class="absolute inset-0 w-full h-full object-cover"
      />
    </div>
    
    <!-- Price badge -->
    {priceDisplay && (
      <div class="absolute bottom-2 left-2 bg-[#ffc800] text-black px-3 py-1 text-sm font-bold rounded-sm">
        {priceDisplay}
      </div>
    )}

    <!-- Deal badge if available -->
    {hotel.dealBadge && (
      <div class="absolute top-2 right-2 bg-[#E53935] text-white px-3 py-1 text-sm font-bold rounded-sm">
        {hotel.dealBadge}
      </div>
    )}
  </div>
  
  <!-- Category tags -->
  <div class="flex flex-wrap gap-2 mt-4 px-4">
    {areaName && (
      <a href={`/where-to-stay?area=${areaName.toLowerCase()}`} 
         class="bg-black text-white px-3 py-1 text-sm font-bold rounded-sm">
        {areaName}
      </a>
    )}
    {categoryName && (
      <a href={`/where-to-stay?category=${categoryName.toLowerCase()}`} 
         class="text-white px-3 py-1 text-sm font-bold rounded-sm bg-[#2073E0]">
        {categoryName}
      </a>
    )}
  </div>
  
  <!-- Content -->
  <div class="p-4 flex flex-col flex-1">
    <div class="flex-1">
      <div class="flex items-center mb-2">
        <h3 class="text-2xl font-bold line-clamp-2">{hotel.name}</h3>
        {hotel.starRating && (
          <div class="flex ml-2">
            {Array.from({ length: Math.min(hotel.starRating, 5) }).map(() => (
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-500">
                <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd" />
              </svg>
            ))}
          </div>
        )}
      </div>
      
      {hotel.guestRating && (
        <div class="mb-2 flex items-center">
          <span class="bg-green-600 text-white text-sm font-bold px-2 py-0.5 rounded mr-2">{hotel.guestRating.value.toFixed(1)}</span>
          <span class="text-sm text-gray-600">{hotel.guestRating.count} reviews</span>
        </div>
      )}
      
      <p class="text-gray-700 text-base mb-4 line-clamp-3">{hotel.description}</p>
    </div>
    
    <!-- Button -->
    <div class="flex items-center mt-auto">
      <a href={hotelUrl} 
         target="_blank"
         rel="noopener noreferrer"
         class="inline-flex items-center text-black text-md uppercase group">
        <span class="font-black border-b-2 border-transparent group-hover:border-black transition-colors duration-200">VIEW DETAILS</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-9 w-9 ml-2 -mt-[3px]" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</div> 