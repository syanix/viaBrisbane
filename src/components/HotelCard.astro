---
import type { Hotel } from '../types/types.d';

interface Props {
  hotel: Hotel;
  viewDetailsUrl?: string;
}

const { hotel, viewDetailsUrl } = Astro.props as Props;

// Get display values with fallbacks
const imageUrl = hotel.image || (hotel.images && hotel.images.length > 0 ? hotel.images[0].url : 'https://images.unsplash.com/photo-1566073771259-6a8506099945?q=80&w=2070&auto=format&fit=crop');
const categoryName = hotel.category?.name || 'Hotel';
const areaName = hotel.area || '';
const priceDisplay = hotel.price || '';
const hotelUrl = viewDetailsUrl || hotel.affiliateLink || `https://www.expedia.com/Brisbane-Hotels.d179993.Travel-Guide-Hotels?`;
---

<div class="bg-white flex flex-col h-full shadow-[0px_2px_8px_rgba(0,0,0,0.1)]">
  <div class="relative">
    <!-- Image container -->
    <div class="relative pb-[66%] overflow-hidden">
      <img 
        src={imageUrl} 
        alt={hotel.name} 
        class="absolute inset-0 w-full h-full object-cover"
      />
    </div>
    
    <!-- Price badge -->
    {priceDisplay && (
      <div class="absolute bottom-2 left-2 bg-[#ffc800] text-black px-3 py-1 text-sm font-bold rounded-sm">
        {priceDisplay}
      </div>
    )}

    <!-- Deal badge if available -->
    {hotel.dealBadge && (
      <div class="absolute top-2 right-2 bg-[#E53935] text-white px-3 py-1 text-sm font-bold rounded-sm">
        {hotel.dealBadge}
      </div>
    )}
  </div>
  
  <!-- Category tags -->
  <div class="flex flex-wrap gap-2 mt-4 px-4">
    {areaName && (
      <a href={`/where-to-stay?area=${areaName.toLowerCase()}`} 
         class="bg-black text-white px-3 py-1 text-sm font-bold rounded-sm">
        {areaName}
      </a>
    )}
    {categoryName && (
      <a href={`/where-to-stay?category=${categoryName.toLowerCase()}`} 
         class="text-white px-3 py-1 text-sm font-bold rounded-sm bg-[#2073E0]">
        {categoryName}
      </a>
    )}
  </div>
  
  <!-- Content -->
  <div class="p-4 flex flex-col flex-1">
    <div class="flex-1">
      <h3 class="text-2xl font-bold line-clamp-2 mb-2">{hotel.name}</h3>
      <p class="text-gray-700 text-base mb-4 line-clamp-3">{hotel.description}</p>
    </div>
    
    <!-- Button -->
    <div class="flex items-center mt-auto">
      <a href={hotelUrl} 
         target="_blank"
         rel="noopener sponsored"
         class="inline-flex items-center text-black text-md uppercase group focus:border-dashed">
        <span class="font-black border-b-2 border-transparent group-hover:border-black transition-colors duration-200">VIEW DETAILS</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-9 w-9 ml-2 -mt-[3px]" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</div> 